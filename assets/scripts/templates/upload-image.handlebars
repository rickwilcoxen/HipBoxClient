<div class="card text-center h-100">
  <div class="card-body">
    <h5 class="card-title">Upload Image</h5>
    <form id="upload-btn" class="col lg-2">
      <div class="form-group">
        <label for="image">Choose a image:</label>
        <input type="file" name="image" required="required" accept="image/png, image/jpeg" class="form-control">
      </div>
      <div class="form-group">
        <input type="text" name="tag" class="form-control" required="required">
      </div>
      <div class="form-group">
        <input class="btn btn-primary btn-block upload-btn" type="submit" value="Upload">
      </div>
    </form>
  </div>
</div>
